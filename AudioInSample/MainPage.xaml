                      Volume="1000"
                      AutoPlay="False">

            </MediaElement>-->
            <MediaElement x:Name="media" Margin="0,10,0,10" Width="100"
                      Height="300"
                      AreTransportControlsEnabled="False"
                      AutoPlay="True">

            </MediaElement>
            
        </StackPanel>

    </Grid>
